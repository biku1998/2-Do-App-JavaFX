<AnchorPane fx:id="signUpRootPane" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #e91e63;" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.SignUpController">
   <children>
      <AnchorPane layoutY="70.0" prefHeight="330.0" prefWidth="700.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <TextField fx:id="username" layoutX="123.0" layoutY="30.0" prefHeight="41.0" prefWidth="454.0" promptText="Name">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="email" layoutX="123.0" layoutY="111.0" prefHeight="41.0" prefWidth="454.0" promptText="Email">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" layoutX="123.0" layoutY="187.0" prefHeight="41.0" prefWidth="454.0" promptText="Password">
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
            <Button layoutX="283.0" layoutY="258.0" mnemonicParsing="false" onAction="#checkData" prefHeight="48.0" prefWidth="134.0" style="-fx-background-color: #e91e63;" text="Sign Up" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <Label alignment="CENTER" layoutX="278.0" layoutY="14.0" prefHeight="48.0" prefWidth="145.0" text="Sign Up" textFill="WHITE">
         <font>
            <Font name="Ubuntu Mono" size="33.0" />
         </font>
      </Label>
      <Button fx:id="signUpLoginbtn" alignment="CENTER" layoutX="470.0" layoutY="25.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="223.0" style="-fx-background-color: #ed4b82;" text="already a member ? login." textFill="WHITE">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="48.0" fitWidth="62.0" layoutX="216.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/user.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
